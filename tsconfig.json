{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "declaration": true,
    "moduleResolution": "Node",
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.*"]
}
